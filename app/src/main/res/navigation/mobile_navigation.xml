<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.askapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_answers"
        android:name="com.example.askapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_answers"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_questions"
        android:name="com.example.askapp.ui.questions.QuestionFragment"
        android:label="@string/title_questions"
        tools:layout="@layout/question_fragment" />

</navigation>